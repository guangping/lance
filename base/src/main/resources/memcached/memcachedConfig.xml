<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-autowire="byName" default-lazy-init="false">

    <!--memcached-->
    <bean name="memcachedClient" class="net.rubyeye.xmemcached.utils.XMemcachedClientFactoryBean"
           destroy-method="shutdown">
        <property name="servers" value="${uba.memcached.servers}"/>
        <property name="connectionPoolSize" value="${uba.memcached.poolsize}"/>
        <property name="failureMode" value="${failureMode}"/>
        <property name="opTimeout"  value="${uba.memcached.timeout}"/>
        <property name="weights">
            <list>
                <value>5</value>
            </list>
        </property>
        <property name="sessionLocator">
            <bean class="net.rubyeye.xmemcached.impl.KetamaMemcachedSessionLocator"/>
        </property>
        <property name="transcoder">
            <bean class="net.rubyeye.xmemcached.transcoders.SerializingTranscoder" />
        </property>
        <property name="commandFactory">
            <bean class="net.rubyeye.xmemcached.command.BinaryCommandFactory"/>
        </property>
    </bean>

    <bean id="xmCache" class="com.framework.cache.memcached.XmCache"/>
    <bean id="cacheFactory" class="com.framework.cache.CacheFactory">
        <property name="instance" ref="xmCache"/>
    </bean>
</beans>